{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "removeComments": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "modules/*": ["./modules/*"],
      "shared/*": ["./shared/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
